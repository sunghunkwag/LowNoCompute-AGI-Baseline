# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include BUGFIX.md
include VERIFICATION_REPORT.md
include COMPREHENSIVE_TEST_REPORT.md
include LIVE_TEST_RESULTS.md

# Include configuration files
include lownocompute_ai_baseline/configs/*.yaml
recursive-include lownocompute_ai_baseline/configs *.yaml

# Include examples
recursive-include examples *.py

# Include tests
recursive-include tests *.py

# Include docs
recursive-include docs *.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

